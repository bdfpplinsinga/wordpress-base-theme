    Since:          0.0.1
    Description:    The default archive template
    Available vars: page, site
    ====================================================================
#}

{% extends "base/base.twig" %}

{% block content %}
	<pre>{{dump(page.posts[0])}}</pre>

	{% for post in page.posts %}
		{% include "parts/post.twig" with {
			image: post.image,
			ratio: 'is-2by1',
			title: {
				text: post.title,
				type: 'h3',
				size: 'small'
			}
		} %}
	{% endfor %}
{% endblock %}

{# 
    ====================================================================
    Name:           heading.twig
    Type:           Partial
    Since:          0.0.1
    Description:    This partial is used to generate the heading and needs a type, title and size
    Available vars: page, layout, site, type, size, text
    ====================================================================
#}

{% block heading %}

	{% set type = title.type|default('h2') %}
	{% set text = title.text|default('') %}
	{% set size = title.size|default('') %}

	<{{type}} class="heading heading--{{ size }}">
		{{ text }}
	</{{type}}>

{% endblock %}

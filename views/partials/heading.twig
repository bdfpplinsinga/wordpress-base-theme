{# 
    ====================================================================
    Name:           heading.twig
    Type:           Partial
    Since:          0.0.1
    Description:    This partial is used to generate the heading and needs a type, title and size
    Available vars: page, layout, site, type, size, text
    ====================================================================
#}

{% block heading %}

	<{{(type)?type:'h2'}} class="heading heading--{{ size }}">
		{{ text }}
	</{{(type)?type:'h2'}}>

{% endblock %}

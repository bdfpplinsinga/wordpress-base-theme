{% set small = image.sizes.medium %}
{% set medium = image.sizes.medium_large %}
{% set large = image.sizes.medium_large %}
{% set full = image.url %}
{% set ratio = ratio|default('') %}

<figure class="image {{ ( ratio is not empty ) ? 'image--ratio' : '' }} {{ratio}} ">
	<img src="{{medium}}" srcset="{{small}} 300w, {{medium}} 768w, {{large}} 1024w, {{full}} 1200w" sizes="(min-width: 1920px) 1920px, (min-width: 1024px) 1024px, (min-width: 768px) 768px, 100vw" alt=" {{image.alt}} ">
</figure>
